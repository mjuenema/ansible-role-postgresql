---

ansible:
  verbose: 'vvvv'
  group_vars:
    shared:
      - postgresql_users:
          - name: dbowner1
            pass: pass
            encrypted: no
          - name: dbowner2
            pass: pass
            encrypted: no
      - postgresql_databases:
          - name: dbname1
            owner: dbowner1
          - name: dbname2
            owner: dbowner2
      - postgresql_database_extensions:
          - db: dbname1
            extensions:
              - hstore
              - citext
      - postgresql_ext_install_contrib: true
      - postgresql_ext_install_dev_headers: true
      - postgresql_ext_install_postgis: true
      - postgresql_ext_postgis_version: "2.1"
    pg91:
      - postgresql_version: 9.1
    pg92:
      - postgresql_version: 9.2
    pg93:
      - postgresql_version: 9.3
    pg94:
      - postgresql_version: 9.4
    pg95:
      - postgresql_version: 9.5
#    pg96:
#      - postgresql_version: 9.6
driver:
  name: docker
docker:
  containers:
    # IMAGE_NAME, IMAGE_VERSION and ANSIBLE_GROUP will be replaced by sed.
    - name: ansible-role-postgresql
      image: IMAGE_NAME
      image_version: 'IMAGE_VERSION'
      privileged: true
      ansible_groups:
        - ANSIBLE_GROUP
        - shared
verifier:
  name: testinfra
